---
import "../styles/home.css";
import BaseLayout from "../layouts/BaseLayout.astro";
import PrintCard from "../components/prints/PrintCard.astro";
import { getCollection } from "astro:content";
import { translations } from "../lib/i18n";

const t = translations.no;

const prints = (await getCollection("prints"))
  .filter((p) => p.data.lang === "no");
---

<BaseLayout
  title="SoriaMoriaPrints"
  description="Fine Art Prints · Nordic Fairytales Reimagined."
>

<section class="hero">
  <div class="container hero-inner">
    
    <div class="hero-text">
      <p class="meta">{t.heroMeta}</p>

      <h1 class="hero-title">
        {t.heroTitle1}<br />
        {t.heroTitle2}
      </h1>

      <p class="hero-lead">
        {t.heroLead}
      </p>

      <div class="hero-actions">
        <a href="#collection" class="btn-gold">
          {t.explore}
        </a>
      </div>
    </div>

    <div class="hero-image">
      <img 
        src="/images/prints/og-default.webp"
        alt="Soria Moria Slott – Fine Art Print"
        loading="eager"
      />
    </div>

  </div>
</section>

<section class="series-intro">
  <div class="container">
    <div class="narrow series-text">

      <p>
        Disse arbeidene vender tilbake til de nordiske eventyrenes landskap — 
        til stillheten, lyset og alvoret som finnes i dem.
      </p>

      <p>
        Øyeblikkene er valgt før løsningene. 
        Før ankomsten, før forvandlingen er fullendt.
      </p>

      <p>
        I dette mellomrommet finnes retning og dybde, 
        liv som vedvarer, og en tyngde som forankrer.
      </p>

      <p>
        SoriaMoriaPrints søker dette rommet — 
        det som skimtes i det fjerne, 
        og det som langsomt tar form i lys.
      </p>

    </div>
  </div>
</section>

<section id="collection" class="featured">
  <div class="container">

    <div class="featured-header">
      <p class="section-meta">{t.collection}</p>
      <h2>{t.selectedWorks}</h2>
    </div>

    <div class="featured-grid">
      {prints.map((print) => (
        <PrintCard
          title={print.data.title}
          id={print.id}
          image={print.data.cover}
          price={print.data.price}
          lang="no"
        />
      ))}
    </div>

  </div>
</section>

</BaseLayout>
